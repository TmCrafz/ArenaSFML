<?xml version="1.0" encoding="utf-8"?>
<Scene>
	<!-- Resources are loaded before creating and placing the widgets. You can use Resources with the id, which can be set with the id attribute -->
	<Resources>
		<Font
			id="defaultFont"
			src="assets/fonts/UbuntuMono-R.ttf"
		/>
	</Resources>
    <Widgets>

			<!-- Header -->
			<TextWidget
					orientation="centerHorizontal"
					text="--PAUSE--"
					characterSize="60"
					textColor="white"
					font="defaultFont" />

			<VerticalLayoutWidget
				id="vertWidget_vl1"
				autoDetermineWidth="true"
				autoDetermineHeight="true"
				backgroundColor="transparent"
				orientation="center" >

				<TextButtonWidget
					id="textButtonWidget_resumeGame"
					width="300"
					height="60"
					orientation="centerHorizontal"
					text="Resume"
					font="defaultFont" />

				<Widget
					width="300"
					height="20"
					backgroundColor="transparent"	/>

				<TextButtonWidget
					id="textButtonWidget_mainMenu"
					width="300"
					height="60"
					orientation="centerHorizontal"
					text="Main menu"
					font="defaultFont" />

			</VerticalLayoutWidget>
	</Widgets>
</Scene>
